<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/singUpContinueRootLayout"
    android:background="@color/morning_background"
    tools:context=".signUpContinueFragment">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/opensans_light"
        android:gravity="end"
        android:paddingBottom="25dp"
        android:text="@string/almost_there"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@id/ivDecoration"
        app:layout_constraintTop_toTopOf="@id/ivDecoration" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDecoration"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:rotationY="-180"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_decoration"
        android:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageUser"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/user"
        app:civ_border_color="@color/white"
        app:civ_border_width="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContinue" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilFirstName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:hint="First name"
        android:textColorHint="@color/white"
        app:boxBackgroundMode="none"
        app:boxStrokeColor="@color/white"
        app:boxStrokeErrorColor="@android:color/holo_red_light"
        app:boxStrokeWidth="2dp"
        app:errorEnabled="true"
        app:errorTextColor="@android:color/holo_red_light"
        app:hintTextColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/tilLastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDecoration"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/opensans_regular"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilLastName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Last name"
        android:textColorHint="@color/white"
        app:boxBackgroundMode="none"
        app:boxStrokeColor="@color/white"
        app:boxStrokeErrorColor="@android:color/holo_red_light"
        app:boxStrokeWidth="2dp"
        app:errorEnabled="true"
        app:errorTextColor="@android:color/holo_red_light"
        app:hintTextColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tilFirstName"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/white"
        tools:layout_editor_absoluteX="88dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/opensans_regular"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/rectangle"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/finish"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tilLastName"
        app:layout_constraintVertical_chainStyle="packed"
        tools:layout_editor_absoluteX="73dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/IWCamera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_camera2"
        app:layout_constraintBottom_toBottomOf="@+id/imageUser"
        app:layout_constraintEnd_toEndOf="@+id/imageUser" />

    <ProgressBar
        android:id="@+id/signUpContinueProgressBar"
        style="?android:attr/progressBarStyle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>